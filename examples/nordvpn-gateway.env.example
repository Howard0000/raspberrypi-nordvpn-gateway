# /etc/nordvpn-gateway.env (example)

# Router/gateway
CORRECT_GATEWAY=192.168.1.1

# NordVPN preferanse (valgfritt: land/by/gruppe/servernavn)
NORDVPN_CONNECT_TARGET=Norway

# MQTT (valgfritt)
MQTT_ENABLED=true
MQTT_BROKER=192.168.1.100
MQTT_USER=your-user
MQTT_PASS=your-password

# Interface-navn
LAN_IFACE=eth0
VPN_IFACE=nordlynx

# Logging
LOG_FILE=/var/log/nordvpn-gateway.log
